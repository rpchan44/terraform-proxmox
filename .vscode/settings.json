{
  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.exclude": {
    "**/.terraform": true,
    "**/README.md": true,
    "**/*.tfstate": true,
    "**/*.tfstate.*": true
  },
  "[terraform]": {
    "editor.defaultFormatter": "hashicorp.terraform"
  }
}
